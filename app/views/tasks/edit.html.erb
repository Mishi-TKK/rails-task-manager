<h1>Edit Task</h1>

<%= form_with model: @task, url: task_path(@task), method: :patch do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, value: @task.title, required: true %>
  </div>

  <div>
    <%= form.label :details %>
    <%= form.text_area :details, value: @task.details, required: true %>
  </div>

  <div>
    <%= form.label :completed, "Mark as completed?" %>
    <%= form.check_box :completed, checked: @task.completed %>
  </div>

  <div>
    <%= form.submit "Update Task" %>
  </div>
<% end %>

<%= link_to 'Back to Task List', tasks_path %>
